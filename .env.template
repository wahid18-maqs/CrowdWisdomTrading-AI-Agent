# CrowdWisdomTrading AI Agent - Environment Variables Template
# Copy this file to .env and fill in your API keys

# ========================================
# REQUIRED API KEYS
# ========================================

# OpenAI API Key (Required for LLM operations)
OPENAI_API_KEY=your_openai_api_key_here

# Tavily Search API Key (Required for financial news search)
TAVILY_API_KEY=your_tavily_api_key_here

# Telegram Bot Configuration (Required for message delivery)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_channel_id_here

# ========================================
# OPTIONAL API KEYS
# ========================================

# Serper API Key (Alternative search provider)
SERPER_API_KEY=your_serper_api_key_here

# Groq API Key (Alternative LLM provider - if free tier available)
GROQ_API_KEY=your_groq_api_key_here

# Google Translate API Key (For enhanced translation quality)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key_here

# ========================================
# CONFIGURATION OPTIONS
# ========================================

# Logging Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Output Directory for saving summaries
OUTPUT_DIR=outputs

# Maximum summary word count
MAX_SUMMARY_WORDS=500

# Target languages for translation (comma-separated)
TARGET_LANGUAGES=arabic,hindi,hebrew

# Market timezone (for scheduling)
MARKET_TIMEZONE=US/Eastern

# ========================================
# ADVANCED SETTINGS
# ========================================

# LiteLLM Model Selection
# Options: gpt-3.5-turbo, gpt-4, claude-3-sonnet, etc.
DEFAULT_LLM_MODEL=gpt-3.5-turbo

# Search result limits
MAX_SEARCH_RESULTS=10
SEARCH_TIME_RANGE_HOURS=1

# Telegram message formatting
TELEGRAM_PARSE_MODE=Markdown
TELEGRAM_DISABLE_WEB_PREVIEW=false

# Performance monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_REPORTING=true

# Development mode
DEBUG_MODE=false
TEST_MODE=false